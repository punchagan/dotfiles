#!/bin/bash
set -e
source $HOME/.virtualenvs/hs/bin/activate

if [ `acpi -a|grep -o "off-line"` ]
then
    echo "Not connected to power."
    exit
fi

# Browser history.
touch $HOME/.life-in-plain-text/memacs/chromium.org
memacs-chromium -o $HOME/.life-in-plain-text/memacs/chromium.org_archive \
                -c $HOME/.memacs/preferences.ini \
                -a


# Git history
touch $HOME/.life-in-plain-text/memacs/git.org
scan-git-repos $HOME/.life-in-plain-text/memacs/git.org_archive punchagan
