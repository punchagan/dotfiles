#!/bin/bash

ACTION="${1:-generate}"
DAY="${2:-last Friday}"
WEEK=$(date -d "${DAY}" '+%U')
YEAR=$(date -d "${DAY}" '+%G')
DIR="${HOME}/code/segfault/admin/weekly/${YEAR}/${WEEK}"
WEEKLY="${DIR}/$(whoami).md"

generate () {
    echo "Generating weekly for week ${WEEK} (in ${YEAR})..."
    opam switch okra
    eval "$(opam env)"
    mkdir -p "${DIR}"
    okra generate --week="${WEEK}" > "${WEEKLY}"
    echo "Generated ${WEEKLY}"
}

lint () {
    okra lint --engineer "${WEEKLY}"
}


if [[ $ACTION == "generate" ]];
then
    generate
elif [[ $ACTION == "lint" ]];
then
    lint
else
    echo "Unknown action: ${ACTION}"
fi
