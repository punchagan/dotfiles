#!/bin/bash

ACTION="${1:-generate}"
DAY="${2:-last Friday}"
WEEK=$(date -d "${DAY}" '+%V')
YEAR=$(date -d "${DAY}" '+%G')
ROOT="${HOME}/code/segfault/admin"
DIR="${ROOT}/weekly/${YEAR}/${WEEK}"
WEEKLY="${DIR}/$(whoami).md"
PREFIX="opam exec --switch=okra --"

commit () {
    pushd "${ROOT}" || exit
    git add "${WEEKLY}"
    git commit -m "Add @punchagan ${YEAR}-${WEEK} weekly"
    popd || exit
}

generate () {
    echo "Generating weekly for week ${WEEK} (in ${YEAR})..."
    mkdir -p "${DIR}"
    $PREFIX okra generate --week="${WEEK}" --year="${YEAR}" > "${WEEKLY}"
    echo "Generated ${WEEKLY}"
}

lint () {
    echo "Linting weekly for week ${WEEK} (in ${YEAR})..."
    $PREFIX okra lint --engineer "${WEEKLY}"
}


if [[ $ACTION == "generate" ]];
then
    generate
elif [[ $ACTION == "lint" ]];
then
    lint
elif [[ $ACTION == "commit" ]];
then
    commit
else
    ${ACTION} "${WEEKLY}"
fi
