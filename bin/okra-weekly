#!/bin/bash

ACTION="${1:-generate}"

# Allow entering week as argument, e.g., "W15"; defaults to last Friday.

if [[ "${2}" =~ ^[wW][0-9]{2}$ ]]; then
    WEEK="${2:1:2}"
    YEAR=$(date '+%G')
else
    DAY="${2:-last Friday}"
    WEEK=$(date -d "${DAY}" '+%V')
    YEAR=$(date -d "${DAY}" '+%G')
fi
ROOT="${HOME}/code/segfault/admin"
DIR="${ROOT}/weekly/${YEAR}/${WEEK}"
WEEKLY="${DIR}/$(whoami).md"
PREFIX="opam exec --switch=okra --"

check () {
    $PREFIX okra lint --engineer --work-item-db="${ROOT}/data/team-objectives.csv" --objective-db="${ROOT}/data/team-objectives.csv" "${WEEKLY}"
    $PREFIX okra stats --engineer "${WEEKLY}"
}

check-commit () {
    pushd "${ROOT}"
    FILES=$(git -C "${ROOT}" diff --name-only HEAD HEAD~1)
    ${PREFIX} okra lint --engineer --work-item-db="${ROOT}/data/team-objectives.csv" --objective-db="${ROOT}/data/team-objectives.csv" ${FILES}
    for each in ${FILES};
    do
        echo "Stats for ${each}..."
        $PREFIX okra stats --engineer "${each}"
    done
    popd
}

commit () {
    pushd "${ROOT}" || exit
    git add "${WEEKLY}"
    git commit -m "Add @punchagan ${YEAR}-${WEEK} weekly"
    popd || exit
}

generate () {
    echo "Generating weekly for week ${WEEK} (in ${YEAR})..."
    mkdir -p "${DIR}"
    $PREFIX okra generate --week="${WEEK}" --year="${YEAR}" > "${WEEKLY}"
    echo "Generated ${WEEKLY}"
}

${ACTION} "${WEEKLY}"
