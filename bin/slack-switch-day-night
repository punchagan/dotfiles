#!/usr/bin/env python
# -*- coding: utf-8 -*-
"""Script to toggle Slack's day/night modes"""

import argparse
from contextlib import contextmanager
import glob
import os
import signal
import subprocess
import time

import plyvel

DB_PATH = os.path.expanduser("~/.config/Slack/Local Storage/leveldb")
MODES = {
    "night": "dark",
    "day": "light",
}


def kill_slack():
    command = subprocess.Popen(["ps", "-A"], stdout=subprocess.PIPE)
    out, _ = command.communicate()
    for line in out.splitlines():
        if b"slack" in line:
            was_running = True
            pid = int(line.split(None, 1)[0])
            os.kill(pid, signal.SIGKILL)
            # Wait for process to die, and release DB
            time.sleep(1)
            return True
    return False


def start_slack():
    subprocess.check_call(["slack"])


@contextmanager
def restart_slack():
    was_running = kill_slack()
    yield
    if was_running:
        start_slack()


def set_mode(mode):
    db = plyvel.DB(DB_PATH, create_if_missing=False)
    for key, value in db:
        if b"slack-client-theme" in key:
            break
    theme_name = "\x01{}".format(MODES[mode]).encode()
    db.put(key, theme_name)
    db.close()


def main():
    parser = argparse.ArgumentParser()
    parser.add_argument("mode", choices=MODES)
    options = parser.parse_args()
    with restart_slack():
        set_mode(options.mode)


if __name__ == "__main__":
    main()
